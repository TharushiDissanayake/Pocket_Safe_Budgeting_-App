<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffff"
    android:padding="20dp">
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family Sharing"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:text="You can add members to your family sharing or leave guest groups by tapping settings"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView

        android:id="@+id/addMemberCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="30dp"
        app:cardBackgroundColor="#2348FF"
        app:cardCornerRadius="20dp">


        <TextView
            android:id="@+id/buttonadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2348FE"
            android:onClick="redirectAddMember"
            android:text="Add Member"
            android:textColor="#ffff" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"

        android:text="To join others wallets tell them to invite "
        android:textColor="#3F51B5"
        android:textStyle="bold"

        />





</LinearLayout>
