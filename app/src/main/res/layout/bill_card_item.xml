<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="#00FFFFFF"
    app:cardCornerRadius="10dp"
    app:contentPaddingBottom="5dp"
    app:contentPaddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/advent_pro_bold"
                android:text="20"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/monthBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/advent_pro_bold"
                android:text="03"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/yearBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/advent_pro_bold"
                android:text="2023" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleBill"
            android:layout_width="430dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:gravity="center_horizontal|center_vertical"
            android:text="WIFI Router"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amountBill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:gravity="center_horizontal|center_vertical"
            android:text="Rs 4500"
            android:textAlignment="center"
            android:textColor="#002348"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/categoryBill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Internet" />

    </LinearLayout>
</androidx.cardview.widget.CardView>